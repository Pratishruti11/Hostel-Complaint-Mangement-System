<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

  <com.google.android.material.appbar.AppBarLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fitsSystemWindows="true"
      android:theme="@style/AppTheme"
      >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/color_icon"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="@color/white"
        />


  </com.google.android.material.appbar.AppBarLayout>
  <include
      layout="@layout/activity_home"
      android:id="@+id/include_home"
      android:visibility="gone"

      />
  <include
      layout="@layout/activity_complaints"
      android:id="@+id/include_maintenance"
      android:visibility="gone"
      />
  <include
      layout="@layout/activity_mess"
      android:id="@+id/include_tabbed_content"
      android:visibility="gone"
      />
  <include
      layout="@layout/update_password"
      android:id="@+id/include_update_pass"
      android:visibility="gone"
      />

  <include
      layout="@layout/activity_profile"
      android:id="@+id/include_profile"
      android:visibility="gone"
      />

</LinearLayout>